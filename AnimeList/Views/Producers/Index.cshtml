@model IEnumerable<Producer>

@{
	ViewBag.Title = "Producers";
}

<div class="row">
	<div class="col-md-8 offset-md-2">
		<table class="table">
			<thead>
				<tr>
					<th>Picture</th>
					<th>Name</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var producers in Model)
				{
					<tr>
						<td class="align-middle">
							<img class="rounded" style="height: 200px" src="@producers.ImageUrl" alt="@producers.Name" />
						</td>
						<td class="align-middle">
							@producers.Name
						</td>
						<td class="align-middle">
							<a class="btn btn-outline-primary mx-1 h-100"><i class="bi bi-pencil-square pe-2"></i>Edit</a>
							<a class="btn btn-outline-info mx-1 h-100"><i class="bi bi-eye pe-2"></i>Details</a>
							<a class="btn btn-danger mx-1 h-100"><i class="bi bi-trash pe-2"></i>Delete</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>