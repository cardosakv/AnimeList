@model VoiceActor

@{
    ViewBag.Title = "Edit " + Model.Name;
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <div class="text-center">
            <h3>Edit @Model.Name</h3>
        </div>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group text-center">
                        <img id="ProfilePicturePreview" class="border-info rounded" style="max-width: 150px" />
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="ImageUrl" class="control-label mb-2">Image Url</label>
                        <input asp-for="ImageUrl" class="form-control" />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="Name" class="control-label mb-2">Name</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="Language" class="control-label mb-2">Language</label>
                        <input asp-for="Language" class="form-control" />
                        <span asp-validation-for="Language" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-2">
                        <a class="btn btn-outline-danger mt-2 float-right" onclick="history.back()">Cancel</a>
                        <input type="submit" value="Update" class="btn btn-outline-success float-end me-2 mt-2" asp-route-id="@Model.Id" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ImageUrl").val();
        })

        $("#ImageUrl").on("change", function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        })
    </script>
}